gem 'jekyll'
gem 'kramdown-parser-gfm'

group :jekyll_plugins do
  gem 'jekyll_pages_api', git: 'https://github.com/18F/jekyll_pages_api'
  gem 'hawkins'
  gem 'jekyll-toc'
end

group :development, :test do
  gem 'rake'
  gem 'html-proofer', '~> 3.10.2'
  gem 'eslintrb'
  gem 'jekyll-autoprefixer'
  gem 'test-unit'
  gem 'json-schema'
  gem "webrick", "~> 1.7"
end
